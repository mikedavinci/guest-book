<div class="jumbotron text-center">
    <h1>Guestbook List</h1>
</div>

<% if (success.length > 0) { %>
    <div class="alert alert-success"><%= success %></div>
<% } %>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Guest Name</th>
            <th>Email</th>
            <th>Message</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        <% for (var event of events) { %>
            <tr>
                <td><%= event.name %></td>
                <td><%= event.email %></td>
                <td><%= event.description %></td>
                <td>
                    <div class="btn">
                        <a href="/events/<%= event.slug %>" class="btn btn-sm btn-primary">View</a>
                        <a href="/events/<%= event.slug %>/edit" class="btn btn-sm btn-warning ">Edit</a>
                        <a href="/events/<%= event.slug %>/delete" class="btn btn-sm btn-danger ">Delete</a>
                    </div>
                </td>
            </tr>

        <% } %>
    </tbody>
</table>